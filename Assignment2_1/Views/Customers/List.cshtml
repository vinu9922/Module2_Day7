@model List<Assignment2_1.Models.Customer>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>List Customers</h1>
<table border="1">
    <tr>
        <th>Customer Id</th>
        <th>Customer Name</th>
        <th>Customer Email</th>
        <th>Customer Phone No</th>
        <th>Customer City</th>
    </tr>
    @foreach (var cust in Model)
    {
    <tr>
        <td>@cust.CustomerId</td>
        <td>@cust.Name</td>
        <td>@cust.Email</td>
        <td>@cust.Phone_No</td>
        <td>@cust.City</td>
        <td>
            <a href="/Customers/details/@cust.CustomerId">Details</a>
        </td>

    </tr>
    }
</table>


